@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var blog in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="~/web/single.html">
                                <img src="@blog.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="~/web/#">
                                            <i class="far fa-calendar-alt"></i> @blog.BlogCreateDate
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="~/web/#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="~/web/#">
                                            <i class="fas fa-eye"></i> @blog.CategoryID
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="~/web/single.html">@blog.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@blog.BlogContent </p>
                                <a href="~/web/single.html" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-left mt-4">
                            <li class="page-item disabled">
                                <a class="page-link" href="~/web/#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="~/web/#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="~/web/#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="~/web/#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="~/web/#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>