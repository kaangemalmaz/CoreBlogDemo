<div class="comment-top">
    <h4>Bir Yorum Bırak</h4>
    <div class="comment-bottom">
        <form asp-controller="Comment" asp-action="PartialCommentAdd" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="İsminiz" required="">
            <input class="form-control" type="email" name="CommentTitle" placeholder="Mail Adresiniz" required="">
            <textarea class="form-control" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>